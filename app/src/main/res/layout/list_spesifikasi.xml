<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ungu"
        >

        <TextView
            android:id="@+id/tv_nama_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="nama type"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/putih"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/smartphone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/zenfone6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="220dp"
                    android:layout_height="160dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/ic_layar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_screen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ic_kamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_layar"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_camera"
                        app:layout_constraintLeft_toLeftOf="@+id/ic_layar"
                        app:layout_constraintRight_toRightOf="@+id/ic_layar"
                        app:layout_constraintTop_toBottomOf="@+id/ic_layar" />

                    <TextView
                        android:id="@+id/ic_soc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic_kamera"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_proci"
                        app:layout_constraintLeft_toLeftOf="@+id/ic_kamera"
                        app:layout_constraintRight_toRightOf="@+id/ic_kamera"
                        app:layout_constraintTop_toBottomOf="@+id/ic_kamera" />

                    <TextView
                        android:id="@+id/ic_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic_soc"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_battery"
                        app:layout_constraintLeft_toLeftOf="@+id/ic_soc"
                        app:layout_constraintRight_toRightOf="@+id/ic_soc"
                        app:layout_constraintTop_toBottomOf="@+id/ic_soc" />

                    <TextView
                        android:id="@+id/txt_layar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Layar"
                        app:layout_constraintBottom_toBottomOf="@id/ic_layar"
                        app:layout_constraintStart_toEndOf="@+id/ic_layar"
                        app:layout_constraintTop_toTopOf="@id/ic_layar" />

                    <TextView
                        android:id="@+id/txt_kamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Kamera"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_kamera"
                        app:layout_constraintLeft_toRightOf="@+id/ic_kamera"
                        app:layout_constraintTop_toTopOf="@+id/ic_kamera" />

                    <TextView
                        android:id="@+id/txt_soc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="SOC"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_soc"
                        app:layout_constraintLeft_toRightOf="@+id/ic_soc"
                        app:layout_constraintTop_toTopOf="@+id/ic_soc" />

                    <TextView
                        android:id="@+id/txt_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Battery"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_battery"
                        app:layout_constraintLeft_toRightOf="@+id/ic_battery"
                        app:layout_constraintTop_toTopOf="@+id/ic_battery" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_ar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_margin="20dp"
            android:backgroundTint="@color/putih"
            android:text="Tampilkan Smartphone Dalam Bentuk Augmenter Reality"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >

            //network

            <TextView
                android:id="@+id/label_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NETWORK"
                android:layout_marginLeft="16dp"
                android:textColor="@color/putih"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/putih"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_network">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_network"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_network2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="Technology \n2G \n3G \n \n\n4G"
                        android:layout_margin="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_network"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="content of network"
                        app:layout_constraintBottom_toBottomOf="@id/cl_network"
                        app:layout_constraintEnd_toEndOf="@id/cl_network"
                        app:layout_constraintStart_toEndOf="@+id/label_network2"
                        app:layout_constraintTop_toTopOf="@id/cl_network" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            //launch

            <TextView
                android:id="@+id/label_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="LAUNCH"
                android:textColor="@color/putih"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@+id/card_network" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_launch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/putih"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_launch">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_launch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_launch2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Announced \nStatus"
                        app:layout_constraintBottom_toBottomOf="@id/cl_launch"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_launch"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="Content of Launch"
                        app:layout_constraintBottom_toBottomOf="@id/cl_launch"
                        app:layout_constraintStart_toEndOf="@+id/label_launch2"
                        app:layout_constraintTop_toTopOf="@id/cl_launch" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="BODY"
                android:textColor="@color/putih"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_launch" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_body">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_body2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Dimensions \nWeight \nBuild \n\nSim"
                        app:layout_constraintBottom_toBottomOf="@id/cl_body"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_body"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:text="Content of Body"
                        android:layout_margin="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cl_body"
                        app:layout_constraintStart_toEndOf="@+id/label_body2"
                        app:layout_constraintTop_toTopOf="@id/cl_body" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="DISPLAY"
                android:textColor="@color/putih"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/label_network"
                app:layout_constraintTop_toBottomOf="@+id/card_body" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_display">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_display2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="Type \nSize \nResolution \nProtection"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_display"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_display"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Content of Display"
                        app:layout_constraintBottom_toBottomOf="@id/cl_display"
                        app:layout_constraintStart_toEndOf="@+id/label_display2"
                        app:layout_constraintTop_toTopOf="@id/cl_display" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLATFORM"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_display" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_platform">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_platform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_platform2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="OS \nChipset \nCPU \n\nGPU"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_platform"
                        app:layout_constraintTop_toTopOf="@id/cl_platform" />

                    <TextView
                        android:id="@+id/tv_platform"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Content of Platform"
                        app:layout_constraintBottom_toBottomOf="@id/cl_platform"
                        app:layout_constraintStart_toEndOf="@+id/label_platform2"
                        app:layout_constraintTop_toTopOf="@id/cl_platform" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEMORY"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_platform" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_memory">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_memory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_memory2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Card Slot \nInternal\n\n"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_memory"
                        app:layout_constraintTop_toTopOf="@id/cl_memory" />

                    <TextView
                        android:id="@+id/tv_memory"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Content of memory"
                        app:layout_constraintBottom_toBottomOf="@id/cl_memory"
                        app:layout_constraintStart_toEndOf="@+id/label_memory2"
                        app:layout_constraintTop_toTopOf="@id/cl_memory" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_main_kamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAIN KAMERA"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_memory" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_main_kamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_main_kamera">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_main_kamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_main_kamera2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Dual \n\nFeature \nVideo\n"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_main_kamera"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_main_camera"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:text="Content of Main Kamera"
                        android:layout_margin="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/cl_main_kamera"
                        app:layout_constraintStart_toEndOf="@+id/label_main_kamera2"
                        app:layout_constraintTop_toTopOf="@id/cl_main_kamera" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_selfie_kamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELFIE KAMERA"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_main_kamera" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_selfie_kamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_selfie_kamera">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_selfie_kamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_selfie_kamera2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Dual \n\nFeature \nVideo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_selfie_kamera"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_selfie_camera"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:text="Content of Selfie Kamera"
                        android:layout_margin="8dp"
                        app:layout_constraintStart_toEndOf="@+id/label_selfie_kamera2"
                        app:layout_constraintTop_toTopOf="@id/cl_selfie_kamera" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOUND"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_selfie_kamera" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_sound">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_sound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_sound2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Loudspeaker \n3.5mm jack\n"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_sound"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_sound"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:text="Content of Sound"
                        android:layout_margin="8dp"
                        app:layout_constraintStart_toEndOf="@+id/label_sound2"
                        app:layout_constraintTop_toTopOf="@id/cl_sound" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_comms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMS"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_sound" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_comms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_comms">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_comms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_comms2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="WLAN \nBluetooth \nGPS \nNFC \nRadio \nUSB"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cl_comms"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_comms"
                        android:layout_width="325dp"
                        android:layout_height="match_parent"
                        android:text="Content of Comms"
                        android:layout_margin="8dp"
                        app:layout_constraintStart_toEndOf="@+id/label_comms2"
                        app:layout_constraintTop_toTopOf="@id/cl_comms" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEATURE"
                android:textColor="@color/putih"
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/label_network"
                app:layout_constraintTop_toBottomOf="@id/card_comms" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/label_feature">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_feature"
                    android:layout_width="match_parent"
